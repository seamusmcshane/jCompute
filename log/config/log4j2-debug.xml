<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} | %r | %5p [%t] %logger - %msg %n"  />
		</Console>
		<File name="file-debug" fileName="log/debug.log" immediateFlush="false" append="false">
			<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} | %r | %5p [%t] %logger - %msg %n"  />
		</File>
		<File name="file-error" fileName="log/error.log" immediateFlush="true" append="false">
			<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} | %r | %5p [%t] %logger - %msg %n"  />
		</File>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="file-debug"/>
			<AppenderRef ref="file-error" level="error"/>
		</Root>
	</Loggers>
</Configuration>
