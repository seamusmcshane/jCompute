<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<properties>
		<property name="ERROR_LOG_FILENAME">$${sys:ERROR_LOG_FILENAME}</property>
		<property name="DEBUG_LOG_FILENAME">$${sys:DEBUG_LOG_FILENAME}</property>
	</properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} | %r | %5p [%t] %logger - %msg %n"  />
		</Console>
		<File name="file-debug" fileName="log/${DEBUG_LOG_FILENAME}.log" bufferedIO="true" immediateFlush="false" append="false">
			<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} | %r | %5p [%t] %logger - %msg %n"  />
		</File>
		<File name="file-error" fileName="log/${ERROR_LOG_FILENAME}.log" bufferedIO="true" immediateFlush="true" append="false">
			<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} | %r | %5p [%t] - %msg %n"  />
		</File>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="file-debug"/>
			<AppenderRef ref="file-error" level="error"/>
		</Root>
	</Loggers>
</Configuration>
